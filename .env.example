# SpeakSync Mobile Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ===========================================
# DEEPGRAM API (Speech Recognition)
# ===========================================
# Get your API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
# Get these values from Firebase Console > Project Settings > General
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=000000000000
FIREBASE_APP_ID=1:000000000000:web:your_app_id_here

# ===========================================
# REVENUECAT CONFIGURATION (In-App Purchases)
# ===========================================
# Get your API keys from: https://app.revenuecat.com/
REVENUECAT_API_KEY_IOS=your_ios_revenuecat_api_key_here
REVENUECAT_API_KEY_ANDROID=your_android_revenuecat_api_key_here

# ===========================================
# AI SERVICES (Optional)
# ===========================================
# Google Gemini AI - https://makersuite.google.com/app/apikey
EXPO_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Hume AI (Emotion Detection) - https://www.hume.ai/
EXPO_PUBLIC_HUME_API_KEY=your_hume_api_key_here
EXPO_PUBLIC_HUME_SECRET_KEY=your_hume_secret_key_here

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to 'true' to enable debug features
DEBUG_MODE=false

# Enable speech recognition logging (verbose)
ENABLE_SPEECH_LOGGING=false

# Enable analytics tracking
ENABLE_ANALYTICS=true

# Enable crash reporting
ENABLE_CRASH_REPORTING=true

# Enable beta testing features
BETA_TESTING_MODE=false

# Enable feature flags system
ENABLE_FEATURE_FLAGS=true

# Use mock services instead of real APIs (for testing)
ENABLE_MOCK_SERVICES=false

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Validate API keys on startup
ENABLE_API_KEY_VALIDATION=true

# Check environment configuration on startup
ENABLE_ENVIRONMENT_CHECK=true
