{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": [
    "<rootDir>/jest-setup-clean.js"
  ],
  "testMatch": [
    "**/__tests__/**/*.(ts|tsx|js)",
    "**/*.(test|spec).(ts|tsx|js)"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/e2e/",
    "<rootDir>/node_modules/"
  ],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest",
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "testTimeout": 10000
}
